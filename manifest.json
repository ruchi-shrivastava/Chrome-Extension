{
    "manifest_version": 3,
    "name": "Color picker",
    "description": "A color picker extension",
    "version": "1.0",
    "background": {
        "service_worker":"background.js"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
      ],



    "action": {
        "default_popup": "popup.html"
         
      },

    "icons": {
        "16": "./images/picker_16.png",
        "32": "./images/picker_32.png",
        "48": "./images/picker_48.png"
      }
      
  }
